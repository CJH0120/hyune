{
  "include": ["src/**/*", "jest.config.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "baseUrl": "./src",
    "paths": {
      "*": ["node_modules/*"],
      "hooks/*": ["hooks/*"],
      "utils/*": ["utils/*"]
    },
    "types": ["jest", "node"],

    "target": "ESNext",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "jsx": "react-jsx",
    "sourceMap": true,
    "declaration": true,
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "typeRoots": ["node_modules/@types"]
  }
}
